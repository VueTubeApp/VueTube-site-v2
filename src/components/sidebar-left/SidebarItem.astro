---
interface Props {
  text: string;
  link?: string;
  isHeader?: boolean;
}

const { text, link, isHeader } = Astro.props;
let isActive;
if (link == Astro.url.pathname) {
  isActive = true;
}
---

<div
  class:list={[
    isHeader && "font-semibold",
    !isHeader && "hover:bg-neutral-800 cursor-pointer",
    "rounded-lg bg-opacity-50 px-2 py-1 group",
  ]}
  style="text-shadow: 0 0 1rem white;"
>
  {
    link && (
      <a
        href={link}
        class:list={[
          "text-neutral-100 group-hover:text-neutral-200",
          isActive && "text-neutral-200",
        ]}
      >
        {text}
      </a>
    )
  }
  {!link && <span class="text-neutral-100">{text}</span>}
</div>
