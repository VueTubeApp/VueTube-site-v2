---
import { getDocs } from "../../i18n";
import SidebarGroup from "./SidebarGroup.astro";
import SidebarItem from "./SidebarItem.astro";
---

<aside
  id="nav"
  class="top-[5.5rem] flex min-w-[15rem] max-w-xs flex-col gap-2 overflow-y-auto border-r border-neutral-800 px-4 pt-4 text-white backdrop-blur-xl duration-300 ease-in-out selection:sticky lg:border-r-0"
  style="height: calc(100dvh - 5.5rem)"
>
  {
    getDocs(Astro).map((item) => {
      {
        if ("header" in item) {
          return (
            <SidebarGroup title={item?.text || ""}>
              {item?.links?.map((subitem) => {
                return (
                  <SidebarItem
                    text={subitem?.text || ""}
                    link={subitem?.link}
                  />
                );
              })}
            </SidebarGroup>
          );
        } else if ("link" in item) {
          return <SidebarItem text={item?.text || ""} link={item?.link} />;
        }
      }
    })
  }
</aside>
